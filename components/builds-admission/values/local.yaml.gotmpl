# Needed for the templating
# otherwise this would be inlined with the helmfile
# note that helmfile supports *.gotmpl but not *.tpl
# Update to your mr version tag
chartVersion: 0.0.63-20230712120152-2ef80a7c
chartRepository: toolsbeta
replicas: 1
config:
    debug: true
    builders:
        - toolsbeta-harbor.wmcloud.org/toolforge/heroku-builder-classic:22

    harborDomains:
        - host.minikube.internal
        - {{ exec "../../helpers/get_harbor_ip.sh" (list) }}

    systemUsers:
        - "system:serviceaccount:tekton-pipelines:tekton-pipelines-controller"
        - "minikube-user"
